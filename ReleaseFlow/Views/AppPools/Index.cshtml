@model IEnumerable<ReleaseFlow.Services.IIS.AppPoolInfo>
@{
    ViewData["Title"] = "Application Pools";
}

<!-- Hero Section -->
<div class="page-hero mb-4">
    <div class="position-relative">
        <h2 class="mb-2">
            <i class="bi bi-layers me-2"></i>
            Application Pools
        </h2>
        <p class="mb-0 opacity-90">
            Monitor and manage IIS application pools
        </p>
    </div>
</div>

<!-- Application Pools Grid -->
<div class="card modern-card" style="background: white;">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            @(Html.Grid(Model).Build(columns =>
            {
                columns.Add(m => m.Name).Titled("Pool Name").Filterable(true).Sortable(true);
                columns.Add(m => m.State).Titled("Status").Filterable(true).Sortable(true).RenderedAs(model =>
                {
                    var (badgeClass, icon, text) = model.State switch
                    {
                        "Started" => ("bg-success", "play-fill", "Running"),
                        "Stopped" => ("bg-danger", "stop-fill", "Stopped"),
                        "Stopping" => ("bg-warning text-dark", "hourglass-split", "Stopping"),
                        "Starting" => ("bg-info", "hourglass-split", "Starting"),
                        _ => ("bg-secondary", "circle", model.State)
                    };
                    return Html.Raw($"<span class='badge {badgeClass}'><i class='bi bi-{icon} me-1'></i>{text}</span>");
                });
                columns.Add(m => m.ManagedRuntimeVersion).Titled(".NET Version").Filterable(true).Sortable(true);
                columns.Add(m => m.ManagedPipelineMode).Titled("Pipeline Mode").Filterable(true).Sortable(true);
                columns.Add(m => m.IdentityType).Titled("Identity").Filterable(true).Sortable(true);
            }).Pageable(pager =>
            {
                pager.RowsPerPage = 10;
                pager.PageSizes = new Dictionary<int, string> { { 10, "10" }, { 50, "50" }, { 100, "100" } };
            }).Filterable().Sortable())
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-layers display-1 text-muted opacity-25"></i>
                <p class="text-muted mt-3">No application pools found</p>
            </div>
        }
    </div>
</div>

@section Styles {
    <link href="~/lib/mvc-grid/css/mvc-grid.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/lib/mvc-grid/js/mvc-grid.js"></script>
    <script>
        document.querySelectorAll('.mvc-grid').forEach(element => new MvcGrid(element));
    </script>
}
