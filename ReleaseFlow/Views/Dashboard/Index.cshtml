@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    /* Premium Dashboard Styles */
    .dashboard-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 3rem 2rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: 0 20px 60px rgba(102, 126, 234, 0.3);
        position: relative;
        overflow: hidden;
    }
    
    .dashboard-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 400px;
        height: 400px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        animation: float 6s ease-in-out infinite;
    }
    
    @@keyframes float {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(10deg); }
    }
    
    .stat-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(0, 0, 0, 0.05);
        position: relative;
        overflow: hidden;
    }
    
    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--card-gradient-start), var(--card-gradient-end));
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease;
    }
    
    .stat-card:hover::before {
        transform: scaleX(1);
    }
    
    .stat-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }
    
    .stat-card.primary {
        --card-gradient-start: #667eea;
        --card-gradient-end: #764ba2;
    }
    
    .stat-card.success {
        --card-gradient-start: #11998e;
        --card-gradient-end: #38ef7d;
    }
    
    .stat-card.warning {
        --card-gradient-start: #f093fb;
        --card-gradient-end: #f5576c;
    }
    
    .stat-card.info {
        --card-gradient-start: #4facfe;
        --card-gradient-end: #00f2fe;
    }
    
    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        background: linear-gradient(135deg, var(--card-gradient-start), var(--card-gradient-end));
        color: white;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        animation: pulse 2s ease-in-out infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
    
    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, var(--card-gradient-start), var(--card-gradient-end));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .glass-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }
    
    .deployment-row {
        transition: all 0.2s ease;
        border-left: 3px solid transparent;
    }
    
    .deployment-row:hover {
        background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, transparent 100%);
        border-left-color: #667eea;
        transform: translateX(4px);
    }
    
    .progress-ring {
        width: 120px;
        height: 120px;
        position: relative;
    }
    
    .progress-ring svg {
        transform: rotate(-90deg);
    }
    
    .progress-ring circle {
        fill: none;
        stroke-width: 8;
        stroke-linecap: round;
        transition: stroke-dashoffset 0.5s ease;
    }
    
    .badge-modern {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
    
    .storage-bar {
        height: 12px;
        border-radius: 10px;
        background: #f0f0f0;
        overflow: hidden;
        position: relative;
    }
    
    .storage-bar-fill {
        height: 100%;
        border-radius: 10px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        transition: width 0.5s ease;
        position: relative;
        overflow: hidden;
    }
    
    .storage-bar-fill::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
        animation: shimmer 2s infinite;
    }
    
    @@keyframes shimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }
</style>

<!-- Hero Section -->
<div class="dashboard-hero">
    <div class="position-relative">
        <h1 class="display-5 fw-bold mb-2">
            <i class="bi bi-speedometer2 me-2"></i>
            Welcome to ReleaseFlow
        </h1>
        <p class="lead mb-0 opacity-90">
            Manage your IIS deployments with confidence and ease
        </p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card primary">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <p class="text-muted mb-1 small fw-semibold text-uppercase">IIS Sites</p>
                    <div class="stat-number">@Model.TotalSites</div>
                </div>
                <div class="stat-icon">
                    <i class="bi bi-server"></i>
                </div>
            </div>
            <div class="d-flex gap-2">
                <span class="badge badge-modern bg-success">
                    <i class="bi bi-check-circle me-1"></i>@Model.RunningSites Running
                </span>
                <span class="badge badge-modern bg-danger">
                    <i class="bi bi-x-circle me-1"></i>@Model.StoppedSites Stopped
                </span>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card success">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <p class="text-muted mb-1 small fw-semibold text-uppercase">Deployments</p>
                    <div class="stat-number">@Model.TotalDeployments</div>
                </div>
                <div class="stat-icon">
                    <i class="bi bi-cloud-upload"></i>
                </div>
            </div>
            <div class="d-flex gap-2">
                <span class="badge badge-modern bg-success">
                    <i class="bi bi-check-circle me-1"></i>@Model.SuccessfulDeployments Success
                </span>
                <span class="badge badge-modern bg-danger">
                    <i class="bi bi-x-circle me-1"></i>@Model.FailedDeployments Failed
                </span>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card warning">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <p class="text-muted mb-1 small fw-semibold text-uppercase">Success Rate</p>
                    <div class="stat-number">
                        @if (Model.TotalDeployments > 0)
                        {
                            @(((double)Model.SuccessfulDeployments / Model.TotalDeployments * 100).ToString("F1"))
                        }
                        else
                        {
                            <span>0</span>
                        }%
                    </div>
                </div>
                <div class="stat-icon">
                    <i class="bi bi-graph-up-arrow"></i>
                </div>
            </div>
            <p class="text-muted mb-0 small">
                <i class="bi bi-info-circle me-1"></i>Deployment reliability metric
            </p>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card info">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <p class="text-muted mb-1 small fw-semibold text-uppercase">Server Health</p>
                    <div class="stat-number" style="font-size: 2rem;">@Model.ServerHealth</div>
                </div>
                <div class="stat-icon">
                    <i class="bi bi-heart-pulse"></i>
                </div>
            </div>
            <p class="text-muted mb-0 small">
                <i class="bi bi-check-circle-fill text-success me-1"></i>All systems operational
            </p>
        </div>
    </div>
</div>

<!-- Storage & Recent Deployments -->
<div class="row g-4 mb-4">
    <!-- Server Storage -->
    <div class="col-lg-5">
        <div class="glass-card h-100">
            <div class="card-header bg-transparent border-0 pt-4 px-4">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-hdd-fill text-primary me-2"></i>
                    Server Storage
                </h5>
            </div>
            <div class="card-body px-4 pb-4">
                @if (Model.Drives.Any())
                {
                    <div class="d-flex flex-column gap-4">
                        @foreach (var drive in Model.Drives)
                        {
                            <div>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div>
                                        <h6 class="mb-0 fw-bold">@drive.Label (@drive.Name)</h6>
                                        <small class="text-muted">@drive.DriveType</small>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold" style="font-size: 1.1rem;">@drive.FreeSpaceGB GB</div>
                                        <small class="text-muted">of @drive.TotalSizeGB GB free</small>
                                    </div>
                                </div>
                                <div class="storage-bar">
                                    <div class="storage-bar-fill @(drive.UsedPercentage > 90 ? "bg-danger" : drive.UsedPercentage > 75 ? "bg-warning" : "")" 
                                         style="width: @drive.UsedPercentage%; background: linear-gradient(90deg, @(drive.UsedPercentage > 90 ? "#dc3545, #ff6b6b" : drive.UsedPercentage > 75 ? "#ffc107, #ffdd57" : "#667eea, #764ba2"));">
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between mt-2">
                                    <small class="text-muted">@drive.UsedSpaceGB GB used</small>
                                    <small class="fw-semibold @(drive.UsedPercentage > 90 ? "text-danger" : drive.UsedPercentage > 75 ? "text-warning" : "text-primary")">
                                        @drive.UsedPercentage%
                                    </small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">No drives available</p>
                }
            </div>
        </div>
    </div>

    <!-- Recent Deployments -->
    <div class="col-lg-7">
        <div class="glass-card h-100">
            <div class="card-header bg-transparent border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-clock-history text-primary me-2"></i>
                    Recent Deployments
                </h5>
                <a asp-controller="Deployments" asp-action="Deploy" class="btn btn-primary btn-sm" style="border-radius: 50px; padding: 0.5rem 1.5rem;">
                    <i class="bi bi-cloud-upload me-1"></i>New Deployment
                </a>
            </div>
            <div class="card-body px-4 pb-4">
                @if (Model.RecentDeployments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr class="border-bottom">
                                    <th class="border-0 text-muted small fw-semibold">Application</th>
                                    <th class="border-0 text-muted small fw-semibold">Version</th>
                                    <th class="border-0 text-muted small fw-semibold">Status</th>
                                    <th class="border-0 text-muted small fw-semibold">Duration</th>
                                    <th class="border-0 text-muted small fw-semibold">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var deployment in Model.RecentDeployments)
                                {
                                    <tr class="deployment-row">
                                        <td>
                                            <div class="fw-semibold">@deployment.Application.Name</div>
                                            <small class="text-muted">by @deployment.DeployedByUsername</small>
                                        </td>
                                        <td><code class="px-2 py-1 bg-light rounded">@deployment.Version</code></td>
                                        <td>
                                            @if (deployment.Status == ReleaseFlow.Models.DeploymentStatus.Succeeded)
                                            {
                                                <span class="badge badge-modern bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Success
                                                </span>
                                            }
                                            else if (deployment.Status == ReleaseFlow.Models.DeploymentStatus.Failed)
                                            {
                                                <span class="badge badge-modern bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i>Failed
                                                </span>
                                            }
                                            else if (deployment.Status == ReleaseFlow.Models.DeploymentStatus.InProgress)
                                            {
                                                <span class="badge badge-modern bg-warning">
                                                    <i class="bi bi-hourglass-split me-1"></i>In Progress
                                                </span>
                                            }
                                            else if (deployment.Status == ReleaseFlow.Models.DeploymentStatus.RolledBack)
                                            {
                                                <span class="badge badge-modern bg-secondary">
                                                    <i class="bi bi-arrow-counterclockwise me-1"></i>Rolled Back
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (deployment.CompletedAt.HasValue)
                                            {
                                                var duration = deployment.CompletedAt.Value - deployment.StartedAt;
                                                <span class="fw-semibold">@duration.TotalSeconds.ToString("F1")s</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Deployments" asp-action="Details" asp-route-id="@deployment.Id" 
                                               class="btn btn-sm btn-outline-primary" style="border-radius: 50px;">
                                                <i class="bi bi-eye me-1"></i>View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted opacity-25"></i>
                        <p class="text-muted mt-3">No deployments yet</p>
                        <a asp-controller="Deployments" asp-action="Deploy" class="btn btn-primary mt-2" style="border-radius: 50px;">
                            <i class="bi bi-cloud-upload me-1"></i>Create First Deployment
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Smooth number counting animation
        document.querySelectorAll('.stat-number').forEach(el => {
            const target = parseFloat(el.textContent);
            if (!isNaN(target)) {
                let current = 0;
                const increment = target / 30;
                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        el.textContent = Math.round(target);
                        clearInterval(timer);
                    } else {
                        el.textContent = Math.round(current);
                    }
                }, 30);
            }
        });

        // Auto-refresh dashboard every 30 seconds
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
}
