@model IEnumerable<ReleaseFlow.Models.AuditLog>
@{
    ViewData["Title"] = "Audit Logs";
}

<!-- Hero Section -->
<div class="page-hero mb-4">
    <div class="position-relative">
        <h2 class="mb-2">
            <i class="bi bi-shield-check me-2"></i>
            Audit Logs
        </h2>
        <p class="mb-0 opacity-90">
            Track all system activities and changes
        </p>
    </div>
</div>

<!-- Audit Logs Grid -->
<div class="card modern-card" style="background: white;">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            @(Html.Grid(Model).Build(columns =>
            {
                columns.Add(m => m.CreatedAt).Titled("Timestamp").Filterable(true).Sortable(true).Formatted("{0:g}");
                columns.Add(m => m.Username).Titled("User").Filterable(true).Sortable(true);
                columns.Add(m => m.Action).Titled("Action").Filterable(true).Sortable(true).RenderedAs(model =>
                {
                    var (badgeClass, icon) = model.Action switch
                    {
                        "Create" => ("bg-success", "plus-circle"),
                        "Update" => ("bg-info", "pencil-square"),
                        "Delete" => ("bg-danger", "trash"),
                        "Deploy" => ("bg-primary", "cloud-upload"),
                        "Rollback" => ("bg-warning text-dark", "arrow-counterclockwise"),
                        "Start" => ("bg-success", "play-fill"),
                        "Stop" => ("bg-danger", "stop-fill"),
                        "Recycle" => ("bg-warning text-dark", "arrow-clockwise"),
                        _ => ("bg-secondary", "circle")
                    };
                    return Html.Raw($"<span class='badge {badgeClass}'><i class='bi bi-{icon} me-1'></i>{model.Action}</span>");
                });
                columns.Add(m => m.EntityType).Titled("Entity Type").Filterable(true).Sortable(true);
                columns.Add(m => m.Details).Titled("Details").Filterable(true).Sortable(true);
                columns.Add(m => m.IpAddress).Titled("IP Address").Filterable(true).Sortable(true);
            }).Pageable(pager =>
            {
                pager.RowsPerPage = 10;
                pager.PageSizes = new Dictionary<int, string> { { 10, "10" }, { 50, "50" }, { 100, "100" } };
            }).Filterable().Sortable())
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted opacity-25"></i>
                <p class="text-muted mt-3">No audit logs found</p>
            </div>
        }
    </div>
</div>

@section Styles {
    <link href="~/lib/mvc-grid/css/mvc-grid.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/lib/mvc-grid/js/mvc-grid.js"></script>
    <script>
        document.querySelectorAll('.mvc-grid').forEach(element => new MvcGrid(element));
    </script>
}
