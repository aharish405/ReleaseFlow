@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReleaseFlow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="col-md-5">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <img src="~/images/releaseflow-logo.png" alt="ReleaseFlow Logo" style="width: 120px; height: 120px; margin-bottom: 1rem;" />
                            <h1 class="h3 mb-2">ReleaseFlow</h1>
                            <p class="text-muted">IIS Deployment Management</p>
                        </div>

                        <form asp-action="Login" method="post">
                            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                            
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                                </div>
                            }

                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" name="username" id="username" class="form-control form-control-lg" 
                                       placeholder="Enter your username" required autofocus />
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" name="password" id="password" class="form-control form-control-lg" 
                                       placeholder="Enter your password" required />
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-box-arrow-in-right"></i> Sign In
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="text-center mt-3 text-muted small">
                    &copy; 2025 ReleaseFlow - IIS Deployment Management System
                </div>
            </div>
        </div>
    </div>
</body>
</html>
