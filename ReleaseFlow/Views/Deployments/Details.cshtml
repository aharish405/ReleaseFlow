@model ReleaseFlow.Models.Deployment
@{
    ViewData["Title"] = $"Deployment #{Model.Id}";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h2><i class="bi bi-info-circle"></i> Deployment Details</h2>
        <p class="text-muted">Deployment #@Model.Id - @Model.Application.Name</p>
    </div>
    <div class="col-md-4 text-end">
        @if (Model.CanRollback && Model.Status == ReleaseFlow.Models.DeploymentStatus.Succeeded)
        {
            <form asp-action="Rollback" asp-route-id="@Model.Id" method="post" 
                  onsubmit="return confirm('Are you sure you want to rollback this deployment?');">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-arrow-counterclockwise"></i> Rollback
                </button>
            </form>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">Deployment Information</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <tr>
                        <th width="40%">Application:</th>
                        <td>@Model.Application.Name</td>
                    </tr>
                    <tr>
                        <th>Version:</th>
                        <td><code>@Model.Version</code></td>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td>
                            @if (Model.Status == ReleaseFlow.Models.DeploymentStatus.Succeeded)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Success</span>
                            }
                            else if (Model.Status == ReleaseFlow.Models.DeploymentStatus.Failed)
                            {
                                <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Failed</span>
                            }
                            else if (Model.Status == ReleaseFlow.Models.DeploymentStatus.InProgress)
                            {
                                <span class="badge bg-warning"><i class="bi bi-hourglass-split"></i> In Progress</span>
                            }
                            else if (Model.Status == ReleaseFlow.Models.DeploymentStatus.RolledBack)
                            {
                                <span class="badge bg-secondary"><i class="bi bi-arrow-counterclockwise"></i> Rolled Back</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Deployed By:</th>
                        <td>@Model.DeployedByUsername</td>
                    </tr>
                    <tr>
                        <th>Started:</th>
                        <td>@Model.StartedAt.ToLocalTime().ToString("F")</td>
                    </tr>
                    <tr>
                        <th>Completed:</th>
                        <td>
                            @if (Model.CompletedAt.HasValue)
                            {
                                @Model.CompletedAt.Value.ToLocalTime().ToString("F")
                            }
                            else
                            {
                                <span class="text-muted">In Progress</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Duration:</th>
                        <td>
                            @if (Model.CompletedAt.HasValue)
                            {
                                var duration = Model.CompletedAt.Value - Model.StartedAt;
                                <span>@duration.TotalSeconds.ToString("F1") seconds</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Package:</th>
                        <td>
                            @Model.ZipFileName
                            <br />
                            <small class="text-muted">@((Model.ZipFileSize / 1024.0 / 1024.0).ToString("F2")) MB</small>
                        </td>
                    </tr>
                    <tr>
                        <th>Can Rollback:</th>
                        <td>
                            @if (Model.CanRollback)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                    </tr>
                </table>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger mt-3">
                        <h6>Error Message:</h6>
                        <p class="mb-0">@Model.ErrorMessage</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Deployment Steps</h5>
            </div>
            <div class="card-body">
                @if (Model.Steps.Any())
                {
                    <div class="list-group">
                        @foreach (var step in Model.Steps.OrderBy(s => s.StepNumber))
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">
                                        Step @step.StepNumber: @step.StepName
                                    </h6>
                                    <small>
                                        @if (step.Status == ReleaseFlow.Models.StepStatus.Succeeded)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check"></i></span>
                                        }
                                        else if (step.Status == ReleaseFlow.Models.StepStatus.Failed)
                                        {
                                            <span class="badge bg-danger"><i class="bi bi-x"></i></span>
                                        }
                                        else if (step.Status == ReleaseFlow.Models.StepStatus.InProgress)
                                        {
                                            <span class="badge bg-warning"><i class="bi bi-hourglass-split"></i></span>
                                        }
                                    </small>
                                </div>
                                @if (!string.IsNullOrEmpty(step.Message))
                                {
                                    <p class="mb-1 small">@step.Message</p>
                                }
                                @if (!string.IsNullOrEmpty(step.ErrorDetails))
                                {
                                    <div class="alert alert-danger small mb-0 mt-2">
                                        <pre class="mb-0">@step.ErrorDetails</pre>
                                    </div>
                                }
                                <small class="text-muted">
                                    @step.StartedAt.ToLocalTime().ToString("HH:mm:ss")
                                    @if (step.CompletedAt.HasValue)
                                    {
                                        <span> - @step.CompletedAt.Value.ToLocalTime().ToString("HH:mm:ss")</span>
                                    }
                                </small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No deployment steps recorded</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to History
    </a>
</div>
