@model IEnumerable<ReleaseFlow.Models.Deployment>
@{
    ViewData["Title"] = "Deployment History";
}

<!-- Hero Section -->
<div class="page-hero mb-4">
    <div class="position-relative">
        <h2 class="mb-2">
            <i class="bi bi-clock-history me-2"></i>
            Deployment History
        </h2>
        <p class="mb-0 opacity-90">
            View and manage all deployment activities
        </p>
    </div>
</div>

<!-- Action Button -->
<div class="d-flex justify-content-end mb-4">
    <a asp-action="Deploy" class="btn btn-primary" style="background: linear-gradient(135deg, #667eea, #764ba2); border: none; border-radius: 8px; padding: 0.6rem 1.5rem; font-weight: 600; color: white; text-decoration: none; display: inline-block;">
        <i class="bi bi-cloud-upload me-1"></i>New Deployment
    </a>
</div>

<!-- Deployments Grid -->
<div class="card modern-card" style="background: white;">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            @(Html.Grid(Model).Build(columns =>
            {
                columns.Add(m => m.Application.Name).Titled("Application").Filterable(true).Sortable(true);
                columns.Add(m => m.Version).Titled("Version").Filterable(true).Sortable(true);
                columns.Add(m => m.Status).Titled("Status").Filterable(true).Sortable(true).RenderedAs(model =>
                {
                    var (badgeClass, icon, text) = model.Status switch
                    {
                        ReleaseFlow.Models.DeploymentStatus.Succeeded => ("bg-success", "check-circle-fill", "Success"),
                        ReleaseFlow.Models.DeploymentStatus.Failed => ("bg-danger", "x-circle-fill", "Failed"),
                        ReleaseFlow.Models.DeploymentStatus.InProgress => ("bg-warning text-dark", "hourglass-split", "In Progress"),
                        ReleaseFlow.Models.DeploymentStatus.RolledBack => ("bg-secondary", "arrow-counterclockwise", "Rolled Back"),
                        _ => ("bg-secondary", "circle", "Unknown")
                    };
                    return Html.Raw($"<span class='badge {badgeClass}'><i class='bi bi-{icon} me-1'></i>{text}</span>");
                });
                columns.Add(m => m.DeployedByUsername).Titled("Deployed By").Filterable(true).Sortable(true);
                columns.Add(m => m.StartedAt).Titled("Started").Filterable(true).Sortable(true).Formatted("{0:g}");
                columns.Add().Titled("Actions").Css("text-center").RenderedAs(model => Html.Raw($@"
                    <a href='{Url.Action("Details", "Deployments", new { id = model.Id })}' class='btn btn-sm btn-outline-primary' style='border: 2px solid #667eea; background: white; color: #667eea; border-radius: 8px;' title='View Details'>
                        <i class='bi bi-eye'></i> Details
                    </a>
                    {(model.CanRollback && model.Status == ReleaseFlow.Models.DeploymentStatus.Succeeded ? 
                        $"<a href='{Url.Action("Rollback", "Deployments", new { id = model.Id })}' class='btn btn-sm btn-outline-warning ms-2' style='border: 2px solid #ffc107; background: white; color: #ffc107; border-radius: 8px;' title='Rollback' onclick='return confirm(\"Are you sure you want to rollback this deployment?\");'><i class='bi bi-arrow-counterclockwise'></i> Rollback</a>" 
                        : "")}
                "));
            }).Pageable(pager =>
            {
                pager.RowsPerPage = 10;
                pager.PageSizes = new Dictionary<int, string> { { 10, "10" }, { 50, "50" }, { 100, "100" } };
            }).Filterable().Sortable())
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted opacity-25"></i>
                <p class="text-muted mt-3 mb-4">No deployments yet</p>
                <a asp-action="Deploy" class="btn btn-primary" style="background: linear-gradient(135deg, #667eea, #764ba2); border: none; border-radius: 8px; padding: 0.6rem 1.5rem; font-weight: 600; color: white; text-decoration: none; display: inline-block;">
                    <i class="bi bi-cloud-upload me-1"></i>Create First Deployment
                </a>
            </div>
        }
    </div>
</div>

@section Styles {
    <link href="~/lib/mvc-grid/css/mvc-grid.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/lib/mvc-grid/js/mvc-grid.js"></script>
    <script>
        document.querySelectorAll('.mvc-grid').forEach(element => new MvcGrid(element));
    </script>
}
