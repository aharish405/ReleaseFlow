@model dynamic

@{
    int currentPage = ViewBag.CurrentPage ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalItems = ViewBag.TotalItems ?? 0;
    int totalPages = ViewBag.TotalPages ?? 1;
    string controllerName = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string actionName = ViewContext.RouteData.Values["action"]?.ToString() ?? "Index";
    
    // Calculate page range to display
    int startPage = Math.Max(1, currentPage - 2);
    int endPage = Math.Min(totalPages, currentPage + 2);
}

<!-- Always show page size selector -->
<div class="row mt-3">
    <div class="col-md-6 mb-2">
        <div class="d-flex align-items-center">
            <label class="me-2 mb-0">Items per page:</label>
            <select class="form-select form-select-sm" style="width: auto;" onchange="changePageSize(this.value)">
                <option value="10" selected="@(pageSize == 10)">10</option>
                <option value="50" selected="@(pageSize == 50)">50</option>
                <option value="100" selected="@(pageSize == 100)">100</option>
                <option value="500" selected="@(pageSize == 500)">500</option>
            </select>
            <span class="ms-3 text-muted">
                Showing @((currentPage - 1) * pageSize + 1) to @(Math.Min(currentPage * pageSize, totalItems)) of @totalItems items
            </span>
        </div>
    </div>
    @if (totalPages > 1)
    {
        <div class="col-md-6">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-md-end justify-content-center mb-0">
                    <!-- Previous button -->
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action(actionName, controllerName, new { page = currentPage - 1, pageSize = pageSize })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    <!-- First page -->
                    @if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action(actionName, controllerName, new { page = 1, pageSize = pageSize })">1</a>
                        </li>
                        @if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    <!-- Page numbers -->
                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action(actionName, controllerName, new { page = i, pageSize = pageSize })">@i</a>
                        </li>
                    }

                    <!-- Last page -->
                    @if (endPage < totalPages)
                    {
                        @if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action(actionName, controllerName, new { page = totalPages, pageSize = pageSize })">@totalPages</a>
                        </li>
                    }

                    <!-- Next button -->
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action(actionName, controllerName, new { page = currentPage + 1, pageSize = pageSize })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<script>
    function changePageSize(newPageSize) {
        window.location.href = '@Url.Action(actionName, controllerName)?page=1&pageSize=' + newPageSize;
    }
</script>
