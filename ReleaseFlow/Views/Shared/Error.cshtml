@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Error</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">An error occurred while processing your request.</h5>
                    
                    @if (Model?.ShowRequestId == true)
                    {
                        <p class="mt-3">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <hr />

                    <div class="alert alert-info">
                        <h6><i class="bi bi-info-circle"></i> Development Mode</h6>
                        <p class="mb-0">
                            For more detailed error information, enable the <strong>Development</strong> environment 
                            by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>.
                        </p>
                    </div>

                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house"></i> Go to Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
