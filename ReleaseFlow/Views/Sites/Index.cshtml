@model IEnumerable<ReleaseFlow.Services.IIS.SiteInfo>
@{
    ViewData["Title"] = "IIS Sites";
}

<!-- Sites Grid -->
<div class="card modern-card" style="background: white; border: none; box-shadow: 0 2px 8px rgba(0,0,0,0.1); margin-bottom: 2rem;">
    <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; padding: 1.25rem 1.5rem;">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div>
                <h5 class="mb-0 text-white d-flex align-items-center">
                    <i class="bi bi-server me-2"></i>
                    IIS Sites
                </h5>
                <small class="text-white-50">Monitor and manage IIS sites on this server</small>
            </div>
            <div class="d-flex gap-2 flex-wrap">
                <a asp-action="ExportCsv" class="btn btn-light btn-sm" style="border-radius: 6px;">
                    <i class="bi bi-file-earmark-spreadsheet me-1"></i>Export CSV
                </a>
                <a asp-action="Index" class="btn btn-success btn-sm" style="border-radius: 6px;">
                    <i class="bi bi-arrow-clockwise me-1"></i>Refresh Sites
                </a>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var site in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card modern-card h-100" style="background: white;">
                    <!-- Card Header -->
                    <div class="card-header bg-light border-bottom d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0 fw-bold">@site.Name</h6>
                            <small class="text-muted">ID: @site.Id</small>
                        </div>
                        @if (site.State == "Started")
                        {
                            <span class="badge badge-modern bg-success">
                                <i class="bi bi-play-circle-fill me-1"></i>Running
                            </span>
                        }
                        else if (site.State == "Stopped")
                        {
                            <span class="badge badge-modern bg-danger">
                                <i class="bi bi-stop-circle-fill me-1"></i>Stopped
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-modern bg-warning">@site.State</span>
                        }
                    </div>

                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="d-flex align-items-center gap-2 mb-2">
                                <i class="bi bi-folder text-primary"></i>
                                <small class="text-muted fw-semibold">Physical Path</small>
                            </div>
                            <code class="small d-block text-break bg-light p-2 rounded">@site.PhysicalPath</code>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex align-items-center gap-2 mb-2">
                                <i class="bi bi-hdd text-primary"></i>
                                <small class="text-muted fw-semibold">Application Pool</small>
                            </div>
                            <span class="badge bg-light text-dark border">@site.AppPoolName</span>
                        </div>

                        @if (site.Bindings.Any())
                        {
                            <div class="mb-3">
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    <i class="bi bi-link-45deg text-primary"></i>
                                    <small class="text-muted fw-semibold">Bindings</small>
                                </div>
                                <div class="d-flex flex-wrap gap-1">
                                    @foreach (var binding in site.Bindings)
                                    {
                                        <span class="badge bg-light text-dark border small">
                                            @binding.Protocol://@binding.BindingInformation
                                        </span>
                                    }
                                </div>
                            </div>
                        }

                        @if (site.Applications.Any())
                        {
                            <div class="mb-3">
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    <i class="bi bi-app text-primary"></i>
                                    <small class="text-muted fw-semibold">Applications (@site.Applications.Count())</small>
                                </div>
                                <div class="small" style="max-height: 200px; overflow-y: auto; background: #f8f9fa; border-radius: 6px; padding: 0.5rem;">
                                    @foreach (var app in site.Applications)
                                    {
                                        <div class="mb-1 p-2 bg-white rounded border-start border-3 border-primary">
                                            <code class="small">@app.Path</code>
                                            <small class="text-muted d-block">@app.AppPoolName</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Card Footer -->
                    <div class="card-footer bg-white border-top">
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-name="@site.Name" 
                               class="btn btn-sm btn-outline-primary flex-fill" style="border-radius: 8px;">
                                <i class="bi bi-eye me-1"></i>Details
                            </a>
                            <form asp-action="Restart" asp-route-name="@site.Name" method="post" class="flex-fill" 
                                  onsubmit="return confirm('Are you sure you want to restart @site.Name? This will briefly interrupt the site.');">
                                <button type="submit" class="btn btn-sm btn-outline-warning w-100" style="border-radius: 8px;">
                                    <i class="bi bi-arrow-clockwise me-1"></i>Restart
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    @if (Model.Any())
    {
        <div class="mt-4">
            @await Html.PartialAsync("_Pagination")
        </div>
    }
}
else
{
    <div class="card" style="background: white;">
        <div class="card-body text-center py-5">
            <i class="bi bi-server display-1 text-muted opacity-25"></i>
            <p class="text-muted mt-3">No IIS sites found</p>
        </div>
    </div>
}
